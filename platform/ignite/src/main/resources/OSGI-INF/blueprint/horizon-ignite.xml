<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0"
    xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0 
		https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

		http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0
		http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.3.0.xsd
">

    <cm:property-placeholder persistent-id="org.opennms.core.ignite.client" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="useKubernetes" value="true"/>
            <cm:property name="kubernetesServiceName" value="ignite-minion-gateway"/>
            <cm:property name="addresses" value="ignored"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="igniteClientConfiguration" class="org.opennms.horizon.core.ignite.IgniteClientConfiguration">
        <argument value="${useKubernetes}"/>
        <argument value="${kubernetesServiceName}"/>
        <argument value="${addresses}"/>
    </bean>

    <bean id="igniteClient" class="org.opennms.horizon.core.ignite.IgnitionFactory" factory-method="createClient" destroy-method="close">
        <argument ref="igniteClientConfiguration"/>
    </bean>

    <service ref="igniteClient" interface="org.apache.ignite.client.IgniteClient"/>

    <service interface="org.opennms.horizon.shared.ipc.rpc.api.RpcClientFactory">
        <bean class="org.opennms.horizon.core.ignite.rpc.IgniteRpcClientFactory">
            <argument ref="igniteClient" />
        </bean>
    </service>

</blueprint>
