<?xml version="1.0" encoding="UTF-8" ?>
<features name="minion-plugin-snmp-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.6.0">

    <feature name="snmp-snmp4j" version="${project.version}" description="Horizon :: SNMP4j">
        <feature prerequisite="true">wrap</feature>
        <feature version="${project.version}">snmp-api</feature>
        <bundle>wrap:mvn:org.snmp4j/snmp4j/${snmp4j.version}</bundle>
        <bundle>mvn:commons-lang/commons-lang/${commons.lang.version}</bundle>
        <bundle>mvn:commons-io/commons-io/${commons.io.version}</bundle>
        <bundle>mvn:org.opennms.horizon.shared/horizon-common-logging/${project.version}</bundle>
        <bundle>mvn:org.opennms.horizon.shared/snmp-api/${project.version}</bundle>
        <bundle>mvn:org.opennms.horizon.shared/snmp-impl/${project.version}</bundle>
    </feature>

    <feature name="snmp-rpc" description="OpenNMS SNMP IPC/RPC" version="${project.version}">
        <feature version="${project.version}">ipc-api</feature>
        <feature version="${project.version}">snmp-api</feature>
        <bundle>mvn:org.opennms.horizon.minion/snmp-ipc/${project.version}</bundle>
    </feature>

    <feature name="snmp-plugins" description="OpenNMS SNMP Plugins" version="${project.version}">
        <feature version="${project.version}">plugins-api</feature>
        <feature version="${project.version}">snmp-snmp4j</feature>
        <bundle>wrap:mvn:com.googlecode.concurrent-locks/concurrent-locks/1.0.0</bundle>
        <bundle>mvn:org.opennms.horizon.minion/snmp-plugin/${project.version}</bundle>
    </feature>

</features>
