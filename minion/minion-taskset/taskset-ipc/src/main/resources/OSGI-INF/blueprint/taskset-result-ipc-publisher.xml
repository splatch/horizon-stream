<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
  xmlns:camel="http://camel.apache.org/schema/blueprint"
  xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <reference id="identity" interface="org.opennms.horizon.shared.ipc.rpc.IpcIdentity" />
  <reference id="messageDispatcherFactory" interface="org.opennms.horizon.shared.ipc.sink.api.MessageDispatcherFactory" />

  <bean id="subscriber" class="org.opennms.horizon.minion.taskset.ipc.internal.LoggingWorkflowSubscriber" />

  <bean id="resultConsumer" class="org.opennms.horizon.minion.taskset.ipc.internal.MeteredConsumer">
    <argument ref="identity" />
    <argument>
      <bean class="org.opennms.horizon.minion.taskset.ipc.internal.ResultsConsumer">
        <argument ref="messageDispatcherFactory" />
      </bean>
    </argument>
  </bean>

  <service ref="subscriber" interface="org.opennms.horizon.minion.ipc.twin.api.TwinListener">
    <service-properties>
      <entry key="message.listener.topic" value="workflow" />
    </service-properties>
  </service>

  <service ref="resultConsumer">
    <interfaces>
      <value>java.util.function.Consumer</value>
      <value>org.opennms.horizon.minion.observability.metrics.MetricsProvider</value>
    </interfaces>
    <service-properties>
      <entry key="message.publisher.topic" value="taskset-results" />
    </service-properties>
  </service>

</blueprint>
