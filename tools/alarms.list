#!/bin/bash

HOST_PORT=localhost:8181
ROOT_PATH=""
JSON="application/json"
XML="application/xml"

ACCEPT="${XML}"
CURL_OPTS=()
TOKEN=""

while getopts "cH:jt:u:vx" arg
do
	case "$arg" in
		c)
			ROOT_PATH="cxf/"
			;;

		H)
			HOST_PORT="${OPTARG}"
			;;

		j)
			ACCEPT="${JSON}"
			;;

		t)
			TOKEN="${OPTARG}"
			CURL_OPTS=("${CURL_OPTS[@]}" "-H" "Authorization: Bearer ${OPTARG}")
			;;

		u)
			CURL_OPTS=("${CURL_OPTS[@]}" "-u${OPTARG}")
			;;

		v)
			CURL_OPTS=("${CURL_OPTS[@]}" -v)
			;;

		x)
			ACCEPT="${XML}"
			;;
	esac
done

curl "${CURL_OPTS[@]}" -X GET -H "Accept: ${ACCEPT}" -s http://${HOST_PORT}/${ROOT_PATH}alarms/list
